<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension id="WelcomeConnect"
              point="org.protege.editor.core.application.OntologyLoader"
              name="Connect To Server">
      <class value="org.protege.editor.owl.client.ClientOntologyBuilder"/>
      <editorKit value="org.protege.editor.owl.OWLEditorKitFactory"/>
   </extension>
   <extension id="Server"
              name="Top Level Server Menu"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Server"/>
      <path value="/SlotG"/>
      <editorKitId value="OWLEditorKit"/>
   </extension>
   <extension id="EnableAutoCommit"
              name="Auto Commit Menu"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Auto-Commit"/>
      <path value="org.protege.editor.owl.client.Server/SlotA-A"/>
      <editorKitId value="OWLEditorKit"/>
      <class value="org.protege.editor.owl.client.EnableAutoCommitAction"/>
      <checkbox value="true"/>
   </extension>
   
   <extension id="EnableAutoUpdate"
              name="Auto Update Menu"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Auto-Update"/>
      <path value="org.protege.editor.owl.client.Server/SlotA-B"/>
      <editorKitId value="OWLEditorKit"/>
      <class value="org.protege.editor.owl.client.EnableAutoUpdateAction"/>
      <checkbox value="true"/>
   </extension>

   <extension id="Commit"
              name="Commit Menu"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Commit"/>
      <path value="org.protege.editor.owl.client.Server/SlotB-C"/>
      <editorKitId value="OWLEditorKit"/>
      <class value="org.protege.editor.owl.client.CommitAction"/>
   </extension>
   
      <extension id="Update"
              name="Update Menu"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Update"/>
      <path value="org.protege.editor.owl.client.Server/SlotB-D"/>
      <editorKitId value="OWLEditorKit"/>
      <class value="org.protege.editor.owl.client.UpdateAction"/>
   </extension>
</plugin>
