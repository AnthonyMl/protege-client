<plugin>
   <extension id="Server"
              name="Top Level Server Menu"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Server"/>
      <path value="/SlotG"/>
      <editorKitId value="OWLEditorKit"/>
   </extension>
   
      <extension id="Connect"
              point="org.protege.editor.core.application.EditorKitMenuAction">
      <name value="Connect to server"/>
      <class value="org.protege.editor.owl.client.ClientOntologyBuilder"/>
      <toolTip value="Connect to Server and open a project"/>
      <path value="org.protege.editor.owl.client.Server/SlotZ-A"/>
      <editorKitId value="OWLEditorKit"/>
   </extension>
   
